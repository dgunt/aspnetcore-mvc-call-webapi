@model NWEBFinal.Application.DTOs.StudentDto
@{
    ViewBag.Title = "Chi tiết sinh viên";
}
<h1>Chi tiết sinh viên</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">Họ Tên</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Ngày sinh</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>
    <p>
        <a asp-action="Index" class="btn btn-secondary">Quay về danh sách</a>
        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Sửa</a>
    </p>
</div>
